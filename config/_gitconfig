[merge]
    tool = meld

[diff]
    tool = meld

[user]
    name = Fei Su
    email = fei.su@citrix.com

[credential]
    helper = store

[push]
    default = simple

[alias]
    up = !sh -c 'git pull --rebase && git push'
    lo = log --oneline -5
    co = checkout
    cob = checkout -b
    br = branch
    brv = branch -vv
    st = status
    rmv = remote -vv

    dc = diff --cached
    dcf = diff --name-only --cached
    dp = diff HEAD^
    dpf = diff --name-only HEAD^
    czs = cz -a -s
    cm = commit -a -s
    cmm = commit -a -s -m
    cma = commit -a -s --amend
    cmn = commit -a -s --amend --no-edit
    pf = push --force-with-lease
    pr = pull --rebase
    parent = "!git reflog | grep \"to $(git branch --show-current)\" | head -1 | awk '{print $6}'"
    rb =  !git rebase "$(git parent)"
    rbm = !git fetch --prune && git rebase origin/master --signoff
    rbi = !git rebase -i $(git merge-base --fork-point origin/HEAD HEAD) --signoff
    rbc = !git add -A && git rebase --continue
    rba = rebase --abort

# Get the current branch name
branch-name = "!git rev-parse --abbrev-ref HEAD"

# Push the current branch to the remote "origin", and set it to track
# the upstream branch
publish = "!git push -u origin $(git branch-name)"

# Delete the remote version of the current branch
unpublish = "!git push origin :$(git branch-name)"

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[pull]
	ff = only
	rebase = true

[core]
	whitespace = cr-at-eol
	excludesfile = ~/.gitignore_global
